/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.swiper-block{
  width: 100%;
}
.swiper-image{
  width: 100%;
  height: 300rpx;
}

.box{
  
    margin: 10rpx 5rpx 10rpx 10rpx;
    height: 200rpx;
    font-size: 30rpx;
    clear: both;

}

.box-img{
  float:left;
  width: 200rpx;
  height: 150rpx;
}
.box-block{
  float:right;
  width: 500rpx;
  height: 200rpx;
 
}
.box_tittle{
  color: #0a0a10;
}
.box_cnt{  
   width: 100%;
    margin: 20rpx 0rpx 0rpx 0rpx;
    color: #999999;
}
.box_time{
  width: 300rpx;
  float: left;
}
.box_click{
  width: 180rpx;
  float: right;
}